%h1= t('.title')
%p= t('.contact_us')

.row
	.col-md-10.col-md-offset-1
		- flash.each do |name, msg|
			- if msg.is_a?(String)
				%div{:class => "alert alert-#{name}"}
					%a.close{"data-dismiss" => "alert"} Ã—
					= content_tag :div, msg, :id => "flash_#{name}"
		= form_tag request_contact_path, method: 'post' do
			.form-group
				= label_tag :name, t('.name')
				= text_field_tag :name, '', title: t('.enter_name'), size: 50, class: 'form-control'

			.form-group
				= label_tag :email, t('.email')
				= email_field_tag :email, '', title: t('.enter_email'), class: 'form-control'

			.form-group
				= label_tag :telephone, t('.telephone')
				= telephone_field_tag :telephone, '', title: t('.enter_telephone'), class: 'form-control'

			.form-group
				= label_tag :message, t('.message')
				= text_area_tag :message, '', title: t('.enter_message'), size: 100, class: 'form-control'
				
			= submit_tag t('.submit'), class: 'btn btn-default'