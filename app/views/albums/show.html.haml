%p#notice= notice
- model_class = Album
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dd
    %dt
      =image_tag @album.artwork.url(:medium)
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @album.name
    %dt.label.label-default= model_class.human_attribute_name(:artist_id)
    %dd
      %pre.prettyprint= @album.artist.name
    %dt.label.label-default= model_class.human_attribute_name(:songs)
    %dd
      %pre.prettyprint= @album.songs.map(&:name).join(", ").html_safe # Retrieves all of the songs within the album being shown
    %dt.label.label-default= model_class.human_attribute_name(:year)
    %dd
      %pre.prettyprint= @album.year

.form-group
  = link_to t('.back', default: t("helpers.links.back")), albums_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_album_path(@album), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), album_path(@album), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: I18n.t('delete_album')))}, class: 'btn btn-danger'