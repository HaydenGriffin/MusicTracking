%p#notice= notice
- model_class = Album
.page-header
  %h1=t '.title', default: model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:artist_id)
      %th= model_class.human_attribute_name(:album)
      %th= model_class.human_attribute_name(:songs)
      %th= model_class.human_attribute_name(:year)
      %th=t '.actions', default: t("helpers.actions")
  %tbody
    - @albums.each do |album|
      %tr
        %td= album.artist.name
        %td= album.name
        %td= album.songs.map(&:name).join(",<br>").html_safe
        %td= album.year
        %td
          = link_to album_path(album), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do
            = glyph 'info-sign'
          = link_to edit_album_path(album), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do
            = glyph 'pencil'
          = link_to album_path(album), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure? Any songs within this album will also be deleted.')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do
            = glyph 'remove'

= link_to t('.new', default: t("helpers.links.new")), new_album_path, class: 'btn btn-default'
