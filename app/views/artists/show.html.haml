%p#notice= notice
- model_class = Artist
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @artist.name
    %dt.label.label-default= model_class.human_attribute_name(:start)
    %dd
      %pre.prettyprint= @artist.start
    %dt.label.label-default= model_class.human_attribute_name(:genre)
    %dd
      %pre.prettyprint= @artist.genre
    %dt.label.label-default= model_class.human_attribute_name(:bio)
    %dd
      %pre.prettyprint= @artist.bio

.form-group
  = link_to t('.back', default: t("helpers.links.back")), artists_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_artist_path(@artist), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), artist_path(@artist), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: t('delete_artist'))) }, class: 'btn btn-danger'