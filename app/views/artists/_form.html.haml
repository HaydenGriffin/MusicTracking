= form_for @artist, html: { class: 'form-horizontal' } do |f|
  - if @artist.errors.any?
    .error_message
      #error_explanation
        %h2= t('.artist_save')
        %ul
          - @artist.errors.full_messages.each do |msg|
            %li= msg

  .form-group
    = f.label :name, class: 'control-label col-md-2'
    .col-md-8
      = f.text_field :name, class: 'text_field form-control'
  .form-group
    = f.label :start, class: 'control-label col-md-2'
    .col-md-8
      = f.number_field :start, class: 'number_field form-control'
  .form-group
    = f.label :genre, class: 'control-label col-md-2'
    .col-md-8
      = f.text_field :genre, class: 'text_field form-control'
  .form-group
    = f.label :bio, class: 'control-label col-md-2'
    .col-md-8
      = f.text_area :bio, class: 'text_area form-control'
  .form-group
    .col-md-offset-2.col-md-8
      = f.submit nil, class: 'btn btn-primary'
      = link_to t('.cancel', default: t("helpers.links.cancel")), artists_path, class: 'btn btn-default'