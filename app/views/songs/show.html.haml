%p#notice= notice
- model_class = Song
.page-header
  %h1=t '.title', default: model_class.model_name.human.titleize
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @song.name
    %dt.label.label-default= model_class.human_attribute_name(:track)
    %dd
      %pre.prettyprint= @song.track
    %dt.label.label-default= model_class.human_attribute_name(:length)
    %dd
      %pre.prettyprint= @song.length
    %dt.label.label-default= model_class.human_attribute_name(:album_id)
    %dd
      %pre.prettyprint= @song.album.name

.form-group
  = link_to t('.back', default: t("helpers.links.back")), songs_path, class: 'btn btn-default'
  = link_to t('.edit', default: t("helpers.links.edit")), edit_song_path(@song), class: 'btn btn-default'
  = link_to t('.destroy', default: t("helpers.links.destroy")), song_path(@song), method: "delete", data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: t('delete_song'))) }, class: 'btn btn-danger'