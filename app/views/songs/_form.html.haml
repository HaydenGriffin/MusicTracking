= form_for @song do |f|
  - if @song.errors.any?
    #error_explanation
      %h2= "#{pluralize(@song.errors.count, "error")} prohibited this song from being saved:"
      %ul
        - @song.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :track
    = f.number_field :track
  .field
    = f.label :length
    = f.text_field :length
  .field
    = f.label :album
    = f.collection_select :album_id, Album.all, :id, :name
  .actions
    = f.submit 'Save'
